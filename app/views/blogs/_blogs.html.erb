<% @blogs.each do |blog| %>
  <div class="row">
    <div class="col s9">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <p>【タイトル】</p>
            <%= blog.title %>
          <p>【内容】</p>
            <%= blog.text %>
        </div>
        <div class="card-action">
          <%= link_to "詳細", blog_path(blog.id), method: :get %>
          <%= link_to "編集", edit_blog_path(blog.id), method: :get %>
          <%= link_to "削除", blog_path(blog.id), method: :delete, data: {confirm: '削除してもよろしいですか?'} %>
        </div>
      </div>
    </div>
  </div>
<% end %>