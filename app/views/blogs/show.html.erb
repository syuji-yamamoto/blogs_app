<div class = "container">
  <div class = "cols9">
    <h1>ブログの詳細</h1>
  </div>
</div>
<div class="row">
  <div class="col s9">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <p>
          <strong>タイトル：</strong>
          <%= @blog.title %>
        </p>
        <p>
          <strong>内容：</strong>
          <%= @blog.text %>
        </p>
        <div class="card-action">
          <%= link_to "編集", edit_blog_path(@blog.id), method: :get %>
          <%= link_to "削除", blog_path(@blog.id), method: :delete, data: {confirm: '削除してもよろしいですか?'} %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class = "container">
  <div class = "row" >
    <div class = "col s6">
      <%= form_with(model: @user, local: true) do |f| %>
        <p>
          <%= f.label :text, "コメント" %><br>
          <%= f.text_area :text %>
        </p>
        <p>
          <%= f.submit "コメントする" %>
        </p>
        <%= link_to '戻る', "/" %>
      <% end %>
    </div>
  </div>
</div>

<div class="comments">   
  <h4>＜コメント一覧＞</h4>
</div>